{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "Preserve",
    "moduleDetection": "force",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
        "@components/*": ["./src/components/*"],
        "@assets/*": ["./src/assets/*"],
        "@utils/*": ["./src/utils/*"],
        "@hooks/*": ["./src/hooks/*"],
        "@styles/*": ["./src/styles/*"],
        "@sanity/*": ["./src/sanity/*"],
        "@studio/*": ["./src/studio/*"],
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
